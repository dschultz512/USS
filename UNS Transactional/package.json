{
  "name": "async-api",
  "version": "1.0.0",
  "description": "AsyncAPI schema used to describe the B2MML-BatchML interface\\r Interface is based on B2MML V0701",
  "main": "asyncapi.yaml",
  "repository": "git@gitlab.com:libremfg/project-resources/general-mills/gmi-async-api.git",
  "author": "Jeroen Janssen <jeroen.janssen@rhize.com>",
  "license": "Copyright 2025",
  "private": true,
  "dependencies": {
    "@asyncapi/cli": "^2.1.1",
    "@asyncapi/generator": "^2.0.3",
    "@asyncapi/html-template": "^2.3.9",
    "@redocly/openapi-cli": "^1.0.0-beta.95"
  },
  "scripts": {
    "dev": "./node_modules/@asyncapi/cli/bin/run start studio",
    "build": "./node_modules/@asyncapi/cli/bin/run generate fromTemplate ./asyncapi.yaml @asyncapi/html-template -o ./docs -i --force-write --debug",
    "images": "bash ./scripts/generate-images.sh ./images",
    "show-openapi": "./node_modules/.bin/openapi preview-docs ./openapi.yaml -p 8081;"
  }
}
